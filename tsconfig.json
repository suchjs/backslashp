{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "regenerate-unicode-properties": ["./types/regenerate-unicode-properties"]
    }
  },
  "typeRoots": ["./node_modules/@types", "./types"],
  "types": ["regenerate-unicode-properties"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib/*", "**/*.spec.ts", "src/local"]
}
